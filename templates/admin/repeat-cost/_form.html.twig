<div class="col-6 mt-3">
    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
            {% if form_errors(form.description)|length > 0 %}
                <div class="alert alert-warning mt-2 pb-0" role="alert">
                    {{ form_errors(form.description) }}
                </div>
            {% endif %}
        </div>

        <div class="mb-3">
            {{ form_label(form.cost, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.cost, {'attr': {'class': 'form-control', 'placeholder': 'Cost'}}) }}
            {% if form_errors(form.cost)|length > 0 %}
                <div class="alert alert-warning mt-2 pb-0" role="alert">
                    {{ form_errors(form.cost) }}
                </div>
            {% endif %}
        </div>

        <div class="mb-3">
            {{ form_label(form.date, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'dd/mm/yyyy'}}) }}
            {% if form_errors(form.date)|length > 0 %}
                <div class="alert alert-warning mt-2 pb-0" role="alert">
                    {{ form_errors(form.date) }}
                </div>
            {% endif %}
        </div>

        <button type="submit" class="btn btn-primary rounded-pill px-3 mb-2 mb-lg-0" title="{{ 'crud.general.create'|trans }}">
            <span class="d-flex align-items-center">
                <a href="{{ path('app_repeat_cost_new') }}">
                    <span class="medium text-white logout">{{ 'crud.general.save'|trans }}</span>
                </a>
            </span>
        </button>
    {{ form_end(form) }}
</div>
