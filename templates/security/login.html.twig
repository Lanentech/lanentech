{% extends 'base.html.twig' %}

{% block title %}{{ 'security.login.tab_name'|trans }}{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                <a href="{{ path('app_logout') }}">{{ 'security.logout.button_label'|trans }}</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">{{ 'security.login.page_title'|trans }}</h1>
        <div>
            <label for="username">{{ 'security.login.form_element.label.username'|trans }}</label>
            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
        </div><br/>
        <div>
            <label for="password">{{ 'security.login.form_element.label.password'|trans }}</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
        </div><br/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-lg btn-primary" type="submit">
            {{ 'security.login.form_element.label.submit_button'|trans }}
        </button>
    </form>
{% endblock %}
