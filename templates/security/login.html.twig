{% extends 'base.html.twig' %}

{% block title %}{{ 'business.name'|trans }} - {{ 'security.login.name'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 my-5 mx-auto">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="d-flex justify-content-center align-items-center" style="height: 25vh;">
                        <i class="bi-person-circle icon-feature" style="font-size: 9rem;"></i>
                    </div>
                    <div>
                        <label for="username">{{ 'security.login.form_element.label.username'|trans }}</label>
                        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                    </div><br/>
                    <div>
                        <label for="password">{{ 'security.login.form_element.label.password'|trans }}</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                    </div><br/>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="d-grid gap-2">
                        <button class="btn btn-lg btn-primary" type="submit">
                            {{ 'security.login.form_element.label.submit_button'|trans }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
