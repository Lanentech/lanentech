<footer class="bg-black text-center py-5 mt-auto">
    <div class="container px-5">
        <div class="row">
            <div class="col text-white-50 small">
                {{ 'footer.company_number'|trans }}: {{ 'business.company_number'|trans }}<br />
                {{ 'footer.phone_number'|trans }}: {{ 'business.phone_number'|trans }}
            </div>
            <div class="col text-white-50 small">
                <div class="mb-2">
                    {{ 'business.address.number'|trans }}
                    {{ 'business.address.street'|trans }},
                    {{ 'business.address.town'|trans }},
                    <br />
                    {{ 'business.address.county'|trans }},
                    {{ 'business.address.postcode'|trans }}
                </div>
            </div>
            <div class="col text-white-50 small">
                <div class="mb-2">
                    &copy; {{ 'business.name'|trans }}<br />{{ 'footer.all_rights_reserved'|trans }}
                </div>
            </div>
        </div>
    </div>
</footer>